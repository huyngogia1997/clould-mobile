<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:background="@color/colorWhite"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        android:layout_marginTop="@dimen/dp60"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/radius_5"
            android:id="@+id/edit_usernamae"
            android:textColor="@color/colorGray"
            android:hint="Enter your username"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:textSize="@dimen/sp14"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/radius_5"
            android:inputType="textPassword"
            android:id="@+id/edit_password"
            android:textColor="@color/colorGray"
            android:hint="Enter your password"
            android:layout_weight="8"
            android:textSize="@dimen/sp14"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp50"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="150px"
            >
            <LinearLayout
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:id="@+id/lnl_button_sign_in"
                android:background="@drawable/radius_10_green"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="@dimen/dp40"
                >
                <TextView
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Đăng nhập"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="150px"
            >
            <LinearLayout
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:id="@+id/lnl_button_sign_up"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="@dimen/dp40">
                <TextView
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/colorGreenDark"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Đăng Ký"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80">

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>